@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategotyName,new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategotyName)
        <br />  <br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextAreaFor(x => x.CategotyDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategotyDescription)
        <br />  <br />
        <button>Kaydet</button>
    </div>
}

